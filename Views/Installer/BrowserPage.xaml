<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.BrowserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="36,24,0,0"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="Browser" />
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel Margin="{ThemeResource ContentPageMargin}"
                        Padding="{ThemeResource ContentPagePadding}"
                        dev:PanelAttach.ChildrenTransitions="Default"
                        Spacing="8">
                <dev:Card Title="Browser"
                          Padding="24,24,24,12"
                          Style="{StaticResource StoreCardStyle}">
                    <dev:Card.Content>
                        <GridView x:Name="Browsers"
                                  IsMultiSelectCheckBoxEnabled="False"
                                  SelectionChanged="Browsers_Changed"
                                  SelectionMode="Multiple">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="75"
                                          Margin="24">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel VerticalAlignment="Center">
                                            <Image Height="36"
                                                   Margin="0,0,0,8"
                                                   Source="{Binding ImageSource}" />
                                            <TextBlock HorizontalAlignment="Center"
                                                       FontSize="14"
                                                       Text="{Binding Text}"
                                                       TextAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:StaggeredPanel ColumnSpacing="12"
                                                             DesiredColumnWidth="155"
                                                             RowSpacing="12" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </dev:Card.Content>
                </dev:Card>
                <dev:Card Title="Extensions"
                          Padding="24,24,24,12"
                          Style="{StaticResource StoreCardStyle}">
                    <dev:Card.Content>
                        <GridView x:Name="Extensions"
                                  IsMultiSelectCheckBoxEnabled="False"
                                  SelectionChanged="Extensions_Changed"
                                  SelectionMode="Multiple">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Height="75"
                                          Margin="24">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel VerticalAlignment="Center">
                                            <Image Height="36"
                                                   Margin="0,0,0,8"
                                                   Source="{Binding ImageSource}" />
                                            <TextBlock HorizontalAlignment="Center"
                                                       FontSize="14"
                                                       Text="{Binding Text}"
                                                       TextAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:StaggeredPanel ColumnSpacing="12"
                                                             DesiredColumnWidth="155"
                                                             RowSpacing="12" />
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                        </GridView>
                    </dev:Card.Content>
                </dev:Card>
                <Border Height="25"
                        Background="Transparent" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
