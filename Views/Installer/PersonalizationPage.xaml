<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Installer.PersonalizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="36,24,0,0"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="Personalization" />
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel Margin="{ThemeResource ContentPageMargin}"
                        Padding="{ThemeResource ContentPagePadding}"
                        dev:PanelAttach.ChildrenTransitions="Default">
                <dev:SettingsGroup Margin="0,0,0,12"
                                   Header="Themes">
                    <dev:SettingsGroup.Content>
                        <GridView x:Name="Themes"
                                  Margin="0,0,0,-12"
                                  SelectionChanged="Theme_Changed"
                                  SelectionMode="Single">
                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Height="128"
                                               Source="{Binding LightTheme}"
                                               Stretch="Uniform"
                                               ToolTipService.Placement="Top"
                                               ToolTipService.ToolTip="Light Mode" />
                                        <Image Height="128"
                                               Source="{Binding DarkTheme}"
                                               Stretch="Uniform"
                                               ToolTipService.Placement="Top"
                                               ToolTipService.ToolTip="Dark Mode" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </dev:SettingsGroup.Content>
                    <dev:SettingsGroup.Items>
                        <dev:SettingsCard x:Name="Mode"
                                          Header="Mode"
                                          HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                    Glyph=&#xE823;}">
                            <ComboBox x:Name="ScheduleMode"
                                      SelectionChanged="ScheduleMode_SelectionChanged">
                                <ComboBoxItem Content="Always Light" />
                                <ComboBoxItem Content="Always Dark" />
                                <ComboBoxItem Content="Sunset to sunrise" />
                                <ComboBoxItem Content="Custom hours" />
                            </ComboBox>
                        </dev:SettingsCard>
                        <dev:SettingsCard x:Name="LightTimeCard"
                                          Header="Light mode time"
                                          HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                    Glyph=&#xE706;}"
                                          Visibility="Collapsed">
                            <TimePicker x:Name="LightTime"
                                        ClockIdentifier="24HourClock"
                                        TimeChanged="LightMode_TimeChanged" />
                        </dev:SettingsCard>
                        <dev:SettingsCard x:Name="DarkTimeCard"
                                          Header="Dark mode time"
                                          HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                    Glyph=&#xE708;}"
                                          Visibility="Collapsed">
                            <TimePicker x:Name="DarkTime"
                                        ClockIdentifier="24HourClock"
                                        TimeChanged="DarkMode_TimeChanged" />
                        </dev:SettingsCard>
                        <dev:Card x:Name="TimelineCard"
                                  Padding="24,-24,24,12"
                                  BorderThickness="1,1,1,0"
                                  CornerRadius="0"
                                  Visibility="Collapsed">
                            <dev:Timeline x:Name="TimeLine" />
                        </dev:Card>
                        <dev:SettingsCard Header="Legacy context menu"
                                          HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                    Glyph=&#xEDE3;}">
                            <ToggleSwitch x:Name="ContextMenu"
                                          Toggled="ContextMenu_Toggled" />
                        </dev:SettingsCard>
                    </dev:SettingsGroup.Items>
                </dev:SettingsGroup>
                <dev:SettingsGroup Margin="0,0,0,36"
                                   Header="Taskbar">
                    <dev:SettingsGroup.Items>
                        <dev:SettingsCard x:Name="TaskbarIcon"
                                          Header="Taskbar alignment">
                            <ComboBox x:Name="TaskbarAlignment"
                                      SelectionChanged="TaskbarAlignment_SelectionChanged">
                                <ComboBoxItem Content="Left" />
                                <ComboBoxItem Content="Center" />
                            </ComboBox>
                        </dev:SettingsCard>
                        <dev:SettingsCard ContentAlignment="Left">
                            <CheckBox x:Name="TrayIcons"
                                      Margin="0,0,0,15"
                                      Padding="22,5,0,0"
                                      Click="TrayIcons_Click"
                                      Content="Always show all tray icons in the notification area" />
                        </dev:SettingsCard>
                    </dev:SettingsGroup.Items>
                </dev:SettingsGroup>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>