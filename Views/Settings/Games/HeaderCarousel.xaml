<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
                    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
                    xmlns:dev="using:DevWinUI"
                    xmlns:local="using:AutoOS.Views.Settings.Games"
                    xmlns:views="using:AutoOS.Views.Settings">
    <Style TargetType="local:HeaderCarousel">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Padding="36,0,36,0"
                                Orientation="Horizontal"
                                Spacing="-16" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HeaderCarousel">
                    <Grid x:Name="RootGrid">
                        <Grid.Resources>
                            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
                        </Grid.Resources>
                        <dev:OpacityMaskView VerticalAlignment="Top">
                            <dev:OpacityMaskView.OpacityMask>
                                <RadialGradientBrush Center="0.5,0.22" GradientOrigin="0.5,0.0" MappingMode="RelativeToBoundingBox" RadiusX="0.92" RadiusY="0.82" SpreadMethod="Pad">
                                    <GradientStop Offset="0" Color="#FF000000" />
                                    <GradientStop Offset="0.05" Color="#FF000000" />
                                    <GradientStop Offset="0.35" Color="#FF000000" />
                                    <GradientStop Offset="0.55" Color="#FF000000" />
                                    <GradientStop Offset="0.85" Color="#00000000" />
                                    <GradientStop Offset="0.95" Color="#00000000" />
                                    <GradientStop Offset="1" Color="#00000000" />
                                </RadialGradientBrush>
                            </dev:OpacityMaskView.OpacityMask>
                            <Grid>
                                <dev:AnimatedImage x:Name="PART_BackDropImage"
                                                   Height="Auto"
                                                   ImageUrl="ms-appx:///Assets/BackgroundBlur.png"
                                                   Stretch="{TemplateBinding ImageStretch}" />
                                <Rectangle>
                                    <Rectangle.Fill>
                                        <RadialGradientBrush Center="0.5,0.22" GradientOrigin="0.5,0.0" MappingMode="RelativeToBoundingBox" RadiusX="0.92" RadiusY="0.82" SpreadMethod="Pad">
                                            <GradientStop Offset="0" Color="#40000000" />
                                            <GradientStop Offset="0.55" Color="#30000000" />
                                            <GradientStop Offset="0.7" Color="#B3000000" />
                                            <GradientStop Offset="1" Color="#FF000000" />
                                        </RadialGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                        </dev:OpacityMaskView>
                        <!--  Title  -->
                        <TextBlock x:Name="PageTitle"
                                   Margin="36,24,0,0"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Games" />
                        <StackPanel Margin="36,80,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                            <!--  Search Box  -->
                            <AutoSuggestBox x:Name="SearchBox"
                                            MinWidth="240"
                                            Padding="12,8"
                                            CornerRadius="18"
                                            PlaceholderText="Search..."
                                            QueryIcon="Find" />
                            <!--  Sort  -->
                            <Button x:Name="Sort"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <FontIcon Margin="0,0,8,0"
                                              FontSize="16"
                                              Glyph="&#xE8CB;" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Sort" />
                                </StackPanel>
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyout.MenuFlyoutPresenterStyle>
                                            <Style TargetType="MenuFlyoutPresenter">
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="Padding" Value="2,4,2,4" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                                <Setter Property="BorderThickness" Value="1" />
                                            </Style>
                                        </MenuFlyout.MenuFlyoutPresenterStyle>
                                        <RadioMenuFlyoutItem x:Name="SortByName"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortKey"
                                                             Text="Name" />
                                        <RadioMenuFlyoutItem x:Name="SortByLauncher"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortKey"
                                                             Text="Launcher" />
                                        <RadioMenuFlyoutItem x:Name="SortByRating"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortKey"
                                                             Text="Rating" />
                                        <RadioMenuFlyoutItem x:Name="SortByPlayTime"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortKey"
                                                             Text="Play Time" />
                                        <MenuFlyoutSeparator Margin="2" />
                                        <RadioMenuFlyoutItem x:Name="SortAscending"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortOrder"
                                                             Text="Ascending" />
                                        <RadioMenuFlyoutItem x:Name="SortDescending"
                                                             Padding="12,8"
                                                             CornerRadius="12"
                                                             GroupName="SortOrder"
                                                             Text="Descending" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <StackPanel Margin="0,80,36,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="8">
                            <!--  Epic Games  -->
                            <Button x:Name="EpicGamesButton"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <dev:ImageEx Height="20"
                                                 Source="Assets/Fluent/Epicgames.png" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Epic Games" />
                                </StackPanel>
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <Flyout.FlyoutPresenterStyle>
                                            <Style TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="14" />
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>
                                        <StackPanel MinWidth="175"
                                                    Spacing="8">
                                            <TextBlock Margin="0,0,0,8"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Epic Games Account" />
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Add  -->
                                                <Button x:Name="AddEpicGamesAccount"
                                                        Grid.Column="0"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="CornflowerBlue"
                                                                  Glyph="&#xE710;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Add" />
                                                    </StackPanel>
                                                </Button>
                                                <!--  Remove  -->
                                                <Button x:Name="RemoveEpicGamesAccount"
                                                        Grid.Column="1"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                                  Glyph="&#xE74D;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Remove" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <!--  Divider  -->
                                            <Rectangle Height="1"
                                                       Margin="0,2"
                                                       Fill="{ThemeResource ControlStrokeColorDefault}" />
                                            <!--  Account  -->
                                            <ComboBox x:Name="EpicGamesAccounts"
                                                      Padding="12,8"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Center"
                                                      CornerRadius="12" />
                                            <StackPanel x:Name="EpicGrowl"
                                                        dev:Growl.GrowlEnterTransition="PopupThemeTransition"
                                                        dev:Growl.GrowlParent="True"
                                                        Spacing="8" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <!--  Steam  -->
                            <Button x:Name="SteamButton"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <dev:ImageEx Height="20"
                                                 Source="Assets/Fluent/Steam.png" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Steam" />
                                </StackPanel>
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <Flyout.FlyoutPresenterStyle>
                                            <Style TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="14" />
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>
                                        <StackPanel MinWidth="175"
                                                    Spacing="8">
                                            <TextBlock Margin="0,0,0,8"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Steam Account" />
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Add  -->
                                                <Button x:Name="AddSteamAccount"
                                                        Grid.Column="0"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="CornflowerBlue"
                                                                  Glyph="&#xE710;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Add" />
                                                    </StackPanel>
                                                </Button>
                                                <!--  Remove  -->
                                                <Button x:Name="RemoveSteamAccount"
                                                        Grid.Column="1"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                                  Glyph="&#xE74D;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Remove" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <!--  Divider  -->
                                            <Rectangle Height="1"
                                                       Margin="0,2"
                                                       Fill="{ThemeResource ControlStrokeColorDefault}" />
                                            <!--  Account  -->
                                            <ComboBox x:Name="SteamAccounts"
                                                      Padding="12,8"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Center"
                                                      CornerRadius="12" />
                                            <StackPanel x:Name="SteamGrowl"
                                                        dev:Growl.GrowlEnterTransition="PopupThemeTransition"
                                                        dev:Growl.GrowlParent="True" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <dev:SwitchPresenter x:Name="SwitchPresenter"
                                             TargetType="x:Boolean"
                                             Value="True">
                            <dev:Case Value="True">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical"
                                            Spacing="8">
                                    <ProgressRing IsActive="True" />
                                    <TextBlock x:Name="SwitchPresenter_TextBlock"
                                               HorizontalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="Fetching Games..." />
                                </StackPanel>
                            </dev:Case>
                            <dev:Case Value="False">
                                <Grid HorizontalAlignment="Stretch">
                                    <!--  Games  -->
                                    <ScrollViewer x:Name="PART_ScrollViewer"
                                                  Margin="0,141,0,0"
                                                  VerticalAlignment="Top"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Disabled"
                                                  VerticalScrollMode="Disabled">
                                        <ItemsPresenter x:Name="PART_ItemsPresenter" />
                                    </ScrollViewer>
                                    <!--  No Games  -->
                                    <StackPanel x:Name="NoGames_StackPanel"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical"
                                                Spacing="8"
                                                Visibility="Collapsed">
                                        <FontIcon Glyph="&#xEA39;" />
                                        <TextBlock HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Text="No games found" />
                                    </StackPanel>
                                </Grid>
                            </dev:Case>
                        </dev:SwitchPresenter>
                        <!--  Metadata Grid  -->
                        <Grid x:Name="MetadataGrid"
                              Margin="36,485,36,0"
                              Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Vertical">
                                <!--  Title  -->
                                <TextBlock RequestedTheme="Dark"
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           Text="{TemplateBinding Title}" />
                                <!--  Developers  -->
                                <TextBlock Margin="0,2"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           RequestedTheme="Dark"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="{TemplateBinding Developers}" />
                                <!--  Play, Update, Stop Processes, Launch Explorer Buttons  -->
                                <StackPanel Margin="0,16,0,0"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                    <Button x:Name="Play"
                                            Padding="48,12"
                                            CornerRadius="20"
                                            Style="{StaticResource WhiteButtonStyle}">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xF5B0;" />
                                            <TextBlock Margin="0,-1,0,0"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Play" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="Update"
                                            Padding="48,12"
                                            CornerRadius="20"
                                            Style="{StaticResource WhiteButtonStyle}"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xEDAB;" />
                                            <TextBlock Margin="0,-1,0,0"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Update" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="StopProcesses"
                                            Padding="15"
                                            CornerRadius="22"
                                            Style="{ThemeResource MicaButtonStyle}"
                                            Visibility="Collapsed">
                                        <FontIcon FontSize="12"
                                                  Glyph="&#xE747;" />
                                        <ToolTipService.ToolTip>
                                            <ToolTip Placement="Mouse">
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold"
                                                               Text="Stop processes" />
                                                    <TextBlock Text="Click to stop processes."
                                                               TextWrapping="Wrap" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </Button>
                                    <Button x:Name="RestartProcesses"
                                            Padding="15"
                                            CornerRadius="22"
                                            Style="{ThemeResource MicaButtonStyle}"
                                            Visibility="Collapsed">
                                        <FontIcon FontSize="12"
                                                  Glyph="&#xE72C;" />
                                        <ToolTipService.ToolTip>
                                            <ToolTip Placement="Mouse">
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold"
                                                               Text="Restart processes" />
                                                    <TextBlock Text="Click to restart processes."
                                                               TextWrapping="Wrap" />
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                    </Button>
                                </StackPanel>
                                <!--  Divider  -->
                                <dev:Divider Margin="0,12,0,12"
                                             RequestedTheme="Dark" />
                            </StackPanel>
                            <!--  Ratings  -->
                            <StackPanel HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                <RatingControl Margin="0,-2,0,0"
                                               IsReadOnly="True"
                                               IsTabStop="False"
                                               PlaceholderValue="{TemplateBinding Rating}"
                                               RequestedTheme="Dark" />
                                <TextBlock VerticalAlignment="Top"
                                           RequestedTheme="Dark"
                                           Style="{StaticResource SubtitleTextBlockStyle}"
                                           Text="{TemplateBinding RoundedRating}" />
                            </StackPanel>
                            <!--  Playtime  -->
                            <TextBlock Margin="0,29,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       RequestedTheme="Dark"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Text="{TemplateBinding PlayTime}" />
                            <!--  Age Ratings  -->
                            <StackPanel Margin="0,38,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <dev:ImageEx Height="44"
                                             IsCacheEnabled="True"
                                             Source="{TemplateBinding AgeRatingUrl}"
                                             Stretch="Uniform" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock RequestedTheme="Dark"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Text="{TemplateBinding AgeRatingTitle}" />
                                    <TextBlock x:Name="AgeRatingDescriptionText"
                                               FontSize="10"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               RequestedTheme="Dark"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="{TemplateBinding AgeRatingDescription}" />
                                    <TextBlock x:Name="ElementsText"
                                               FontSize="8"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                               RequestedTheme="Dark"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="{TemplateBinding Elements}" />
                                </StackPanel>
                            </StackPanel>
                            <!--  Metadata Scrollviewer  -->
                            <ScrollViewer x:Name="Metadata_ScrollViewer"
                                          Grid.Row="1"
                                          Margin="0,2,0,0"
                                          HorizontalScrollMode="Disabled"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel>
                                    <StackPanel Spacing="8">
                                        <!--  Genres  -->
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Auto"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Genres}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="8" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="12,4"
                                                                Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                                                                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                                                                BorderThickness="1"
                                                                CornerRadius="14">
                                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                                                       Text="{Binding}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                        <!--  Features  -->
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Auto"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Features}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="8" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="12,4"
                                                                Background="{ThemeResource LayerOnMicaBaseAltFillColorDefaultBrush}"
                                                                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                                                                BorderThickness="1"
                                                                CornerRadius="14">
                                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                                                       Text="{Binding}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <!--  Description  -->
                                    <dev:Card Title="Description"
                                              Margin="0,12,0,12">
                                        <TextBlock Text="{TemplateBinding Description}"
                                                   TextWrapping="Wrap" />
                                    </dev:Card>
                                    <!--  Screenshots  -->
                                    <!--<views:GameGallery x:Name="Screenshots_Gallery" Margin="0,0,0,16" >
                                            <views:GameGallery.HeaderContent>
                                                <ItemsControl ItemsSource="{TemplateBinding Screenshots}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="18" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <dev:ImageEx
                                                                Height="160"
                                                                Margin="0,8,0,8"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Stretch"
                                                                AutomationProperties.AccessibilityView="Raw"
                                                                CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                IsCacheEnabled="True"
                                                                Source="{Binding}"
                                                                Stretch="Uniform" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </views:GameGallery.HeaderContent>
                                        </views:GameGallery>-->
                                    <dev:Card x:Name="Screenshots_Card"
                                              Title="Screenshots"
                                              Margin="0,0,0,12"
                                              Visibility="Collapsed">
                                        <dev:Card.TitleContent>
                                            <Button Margin="0,4,16,4"
                                                    Padding="6"
                                                    Style="{StaticResource SubtleButtonStyle}"
                                                    Visibility="Collapsed">
                                                <FontIcon FontSize="16"
                                                          Glyph="&#xE76C;" />
                                            </Button>
                                        </dev:Card.TitleContent>
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Disabled"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Screenshots}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="24" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <dev:ImageEx Height="160"
                                                                     HorizontalAlignment="Stretch"
                                                                     VerticalAlignment="Stretch"
                                                                     AutomationProperties.AccessibilityView="Raw"
                                                                     CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                     IsCacheEnabled="True"
                                                                     Source="{Binding}"
                                                                     Stretch="Uniform" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </dev:Card>
                                    <!--  Videos  -->
                                    <ScrollViewer x:Name="Videos_ScrollViewer"
                                                  Margin="0,0,0,16"
                                                  HorizontalAlignment="Left"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  HorizontalScrollMode="Auto"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  VerticalScrollMode="Disabled"
                                                  Visibility="Collapsed"
                                                  ZoomMode="Disabled">
                                        <ItemsControl ItemsSource="{TemplateBinding Videos}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"
                                                                Spacing="16" />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <MediaPlayerElement Height="250"
                                                                        Margin="0,8,0,8"
                                                                        AreTransportControlsEnabled="True"
                                                                        AutoPlay="False"
                                                                        CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                        Source="{Binding}" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                    <dev:Card Title="Additional information"
                                              Margin="0,0,0,12">
                                        <ItemsRepeater x:Name="PART_ItemsRepeater"
                                                       ItemsSource="{Binding InfoItems, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ItemsRepeater.Layout>
                                                <controls:StaggeredLayout ColumnSpacing="12"
                                                                          DesiredColumnWidth="225"
                                                                          ItemsStretch="Fill"
                                                                          RowSpacing="24" />
                                            </ItemsRepeater.Layout>
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <FontIcon Grid.Column="0"
                                                                  Margin="0,2,12,0"
                                                                  VerticalAlignment="Top"
                                                                  FontSize="14"
                                                                  Glyph="{Binding Glyph}"
                                                                  Visibility="{Binding IsFontIcon, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                        <Viewbox Width="14"
                                                                 Height="14"
                                                                 Margin="0,2,12,0"
                                                                 VerticalAlignment="Top"
                                                                 Visibility="{Binding IsPathIcon, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <PathIcon Data="{Binding PathData}" />
                                                        </Viewbox>
                                                        <StackPanel Grid.Column="1"
                                                                    Orientation="Vertical"
                                                                    Spacing="4">
                                                            <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                                       Style="{StaticResource BodyTextBlockStyle}"
                                                                       Text="{Binding Label}" />
                                                            <TextBlock Text="{Binding Value}"
                                                                       TextWrapping="Wrap"
                                                                       Visibility="{Binding IsHyperlink, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=True}" />
                                                            <HyperlinkButton x:Name="Link"
                                                                             Margin="0,-6"
                                                                             Style="{StaticResource TextBlockButtonStyle}"
                                                                             Visibility="{Binding IsHyperlink, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock Text="{Binding Hyperlink}"
                                                                           TextTrimming="CharacterEllipsis"
                                                                           TextWrapping="Wrap" />
                                                            </HyperlinkButton>
                                                        </StackPanel>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </dev:Card>
                                    <dev:Card x:Name="PresentationMode"
                                              Title="Settings"
                                              Margin="0,0,0,12"
                                              Visibility="Collapsed">
                                        <!--  Presentation Mode  -->
                                        <StackPanel>
                                            <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Presentation Mode:" />
                                            <TextBlock Margin="0,2,0,12"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Text="Use Hardware: Independent Flip if you have issues when tabbing out." />
                                            <ComboBox x:Name="PresentationMode_ComboBox">
                                                <ComboBoxItem Content="Hardware: Independent Flip" />
                                                <ComboBoxItem Content="Hardware: Legacy Flip" />
                                            </ComboBox>
                                        </StackPanel>
                                    </dev:Card>
                                    <Border Height="24"
                                            Background="Transparent" />
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>