<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dev="using:DevWinUI"
                    xmlns:local="using:AutoOS.Views.Settings.Games.HeaderCarousel"
                    xmlns:views="using:AutoOS.Views.Settings.Games">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <SolidColorBrush x:Key="OverlayBrush"
                             Color="#66FFFFFF" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <SolidColorBrush x:Key="OverlayBrush"
                             Color="#66000000" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    <Style TargetType="local:HeaderCarousel">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel Padding="36,0,36,0"
                                Orientation="Horizontal"
                                Spacing="-16" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:HeaderCarousel">
                    <Grid x:Name="RootGrid">
                        <dev:OpacityMaskView VerticalAlignment="Top">
                            <dev:OpacityMaskView.OpacityMask>
                                <RadialGradientBrush Center="0.5,0.22" GradientOrigin="0.5,0.0" MappingMode="RelativeToBoundingBox" RadiusX="0.92" RadiusY="0.82" SpreadMethod="Pad">
                                    <GradientStop Offset="0" Color="#FF000000" />
                                    <GradientStop Offset="0.05" Color="#FF000000" />
                                    <GradientStop Offset="0.35" Color="#FF000000" />
                                    <GradientStop Offset="0.55" Color="#FF000000" />
                                    <GradientStop Offset="0.85" Color="#00000000" />
                                    <GradientStop Offset="0.95" Color="#00000000" />
                                    <GradientStop Offset="1" Color="#00000000" />
                                </RadialGradientBrush>
                            </dev:OpacityMaskView.OpacityMask>
                            <Grid>
                                <dev:AnimatedImage x:Name="PART_BackDropImage"
                                                   Height="Auto"
                                                   ImageUrl="ms-appx:///Assets/BackgroundBlur.png"
                                                   Stretch="{TemplateBinding ImageStretch}" />
                                <Rectangle Fill="{ThemeResource OverlayBrush}" />
                            </Grid>
                        </dev:OpacityMaskView>
                        <!--  Title  -->
                        <TextBlock Margin="36,24,0,0"
                                   Style="{StaticResource TitleTextBlockStyle}"
                                   Text="Games" />
                        <!--  Search Box  -->
                        <StackPanel Margin="32,80,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="12">
                            <AutoSuggestBox x:Name="SearchBox"
                                            MinWidth="250"
                                            MaxWidth="400"
                                            Padding="12,8"
                                            CornerRadius="18"
                                            PlaceholderText="Search..."
                                            QueryIcon="Find" />
                            <!--  Sort  -->
                            <Button x:Name="Sort"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <FontIcon Margin="0,0,8,0"
                                              FontSize="16"
                                              Glyph="&#xE8CB;" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Sort" />
                                </StackPanel>
                                <Button.Flyout>
                                    <MenuFlyout Placement="Bottom">
                                        <MenuFlyout.MenuFlyoutPresenterStyle>
                                            <Style TargetType="MenuFlyoutPresenter">
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="Padding" Value="2,4,2,4" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                                <Setter Property="BorderThickness" Value="1" />
                                            </Style>
                                        </MenuFlyout.MenuFlyoutPresenterStyle>
                                        <MenuFlyoutItem x:Name="SortByName"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Name" />
                                        <MenuFlyoutItem x:Name="SortByLauncher"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Launcher" />
                                        <MenuFlyoutItem x:Name="SortByRating"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Rating" />
                                        <MenuFlyoutItem x:Name="SortByPlayTime"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Play Time" />
                                        <MenuFlyoutSeparator Margin="2" />
                                        <MenuFlyoutItem x:Name="SortAscending"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Ascending" />
                                        <MenuFlyoutItem x:Name="SortDescending"
                                                        Padding="12,8"
                                                        CornerRadius="12"
                                                        Text="Descending" />
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                            <Button x:Name="Fullscreen"
                                    Padding="12,8"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                    <FontIcon x:Name="FullscreenIcon"
                                              Margin="0,0,8,0"
                                              FontSize="12"
                                              Glyph="&#xE92D;" />
                                    <TextBlock x:Name="FullscreenText"
                                               VerticalAlignment="Center"
                                               Text="Enter Full Screen" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel Margin="0,80,32,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal"
                                    Spacing="12"
                                    Visibility="Visible">
                            <!--  Epic Games  -->
                            <Button x:Name="EpicAccount"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <BitmapIcon Height="20"
                                                ShowAsMonochrome="False"
                                                UriSource="Assets/Fluent/Epicgames.png" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Epic Games" />
                                </StackPanel>
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <Flyout.FlyoutPresenterStyle>
                                            <Style TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="14" />
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>
                                        <StackPanel MinWidth="175"
                                                    Spacing="8">
                                            <TextBlock Margin="0,0,0,8"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Epic Games Account" />
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Add  -->
                                                <Button x:Name="AddEpicGamesAccount"
                                                        Grid.Column="0"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="CornflowerBlue"
                                                                  Glyph="&#xE710;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Add" />
                                                    </StackPanel>
                                                </Button>
                                                <!--  Remove  -->
                                                <Button x:Name="RemoveEpicGamesAccount"
                                                        Grid.Column="1"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                                  Glyph="&#xE74D;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Remove" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <!--  Divider  -->
                                            <Rectangle Height="1"
                                                       Margin="0,2"
                                                       Fill="{ThemeResource ControlStrokeColorDefault}" />
                                            <!--  Account  -->
                                            <ComboBox x:Name="EpicGamesAccounts"
                                                      Padding="12,8"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Center"
                                                      CornerRadius="12" />
                                            <StackPanel x:Name="EpicGrowl"
                                                        dev:Growl.GrowlEnterTransition="PopupThemeTransition"
                                                        dev:Growl.GrowlParent="True"
                                                        Spacing="8" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                            <!--  Steam  -->
                            <Button x:Name="SteamAccount"
                                    Padding="12,8"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    CornerRadius="18"
                                    Style="{ThemeResource MicaButtonStyle}">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="8">
                                    <BitmapIcon Height="20"
                                                ShowAsMonochrome="False"
                                                UriSource="Assets/Fluent/Steam.png" />
                                    <TextBlock VerticalAlignment="Center"
                                               Text="Steam" />
                                </StackPanel>
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <Flyout.FlyoutPresenterStyle>
                                            <Style TargetType="FlyoutPresenter">
                                                <Setter Property="Padding" Value="14" />
                                                <Setter Property="CornerRadius" Value="18" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource ButtonBorderBrush}" />
                                            </Style>
                                        </Flyout.FlyoutPresenterStyle>
                                        <StackPanel MinWidth="175"
                                                    Spacing="8">
                                            <TextBlock Margin="0,0,0,8"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                                       Text="Steam Account" />
                                            <Grid ColumnSpacing="8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <!--  Add  -->
                                                <Button x:Name="AddSteamAccount"
                                                        Grid.Column="0"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="CornflowerBlue"
                                                                  Glyph="&#xE710;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Add" />
                                                    </StackPanel>
                                                </Button>
                                                <!--  Remove  -->
                                                <Button x:Name="RemoveSteamAccount"
                                                        Grid.Column="1"
                                                        Padding="12,8"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="12">
                                                    <StackPanel VerticalAlignment="Center"
                                                                Orientation="Horizontal">
                                                        <FontIcon Margin="0,0,8,0"
                                                                  FontSize="16"
                                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                                  Glyph="&#xE74D;" />
                                                        <TextBlock VerticalAlignment="Center"
                                                                   Text="Remove" />
                                                    </StackPanel>
                                                </Button>
                                            </Grid>
                                            <!--  Divider  -->
                                            <Rectangle Height="1"
                                                       Margin="0,2"
                                                       Fill="{ThemeResource ControlStrokeColorDefault}" />
                                            <!--  Account  -->
                                            <ComboBox x:Name="SteamAccounts"
                                                      Padding="12,8"
                                                      HorizontalAlignment="Stretch"
                                                      HorizontalContentAlignment="Center"
                                                      CornerRadius="12" />
                                            <StackPanel x:Name="SteamGrowl"
                                                        dev:Growl.GrowlEnterTransition="PopupThemeTransition"
                                                        dev:Growl.GrowlParent="True" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <dev:SwitchPresenter x:Name="SwitchPresenter"
                                             TargetType="x:Boolean"
                                             Value="True">
                            <dev:Case Value="True">
                                <StackPanel HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical"
                                            Spacing="8">
                                    <ProgressRing IsActive="True" />
                                    <TextBlock x:Name="SwitchPresenter_TextBlock"
                                               HorizontalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="Fetching data..." />
                                </StackPanel>
                            </dev:Case>
                            <dev:Case Value="False">
                                <Grid HorizontalAlignment="Stretch">
                                    <!--  Games  -->
                                    <ScrollViewer x:Name="PART_ScrollViewer"
                                                  Margin="0,140,0,0"
                                                  VerticalAlignment="Top"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Disabled"
                                                  VerticalScrollMode="Disabled">
                                        <ItemsPresenter x:Name="PART_ItemsPresenter" />
                                    </ScrollViewer>
                                    <!--  No Games  -->
                                    <StackPanel x:Name="NoGames_StackPanel"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical"
                                                Spacing="8"
                                                Visibility="Collapsed">
                                        <FontIcon Glyph="&#xEA39;" />
                                        <TextBlock HorizontalAlignment="Center"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Text="No games found" />
                                    </StackPanel>
                                </Grid>
                            </dev:Case>
                        </dev:SwitchPresenter>
                        <!--  Metadata Grid  -->
                        <Grid x:Name="MetadataGrid"
                              Margin="36,485,36,0"
                              Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Orientation="Vertical">
                                <!--  Title  -->
                                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}"
                                           Text="{TemplateBinding Title}" />
                                <!--  Developers  -->
                                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Text="{TemplateBinding Developers}" />
                                <!--  Play, Update, Stop Processes, Launch Explorer Buttons  -->
                                <StackPanel Margin="0,12,0,0"
                                            Orientation="Horizontal"
                                            Spacing="8">
                                    <Button x:Name="Play"
                                            Padding="12,8"
                                            CornerRadius="18">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xF5B0;" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="Play" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="Update"
                                            Padding="12,8"
                                            CornerRadius="18"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xEDAB;" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="Update" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="StopProcesses"
                                            Padding="12,8"
                                            CornerRadius="18"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xE747;" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="Stop Processes" />
                                        </StackPanel>
                                    </Button>
                                    <Button x:Name="LaunchExplorer"
                                            Padding="12,8"
                                            CornerRadius="18"
                                            Visibility="Collapsed">
                                        <StackPanel VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <FontIcon Margin="0,0,8,0"
                                                      FontSize="12"
                                                      Glyph="&#xE72C;" />
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="Launch Explorer" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                                <!--  Divider  -->
                                <dev:Divider Margin="0,8,0,8" />
                            </StackPanel>
                            <!--  Ratings  -->
                            <StackPanel Margin="0,-2,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal"
                                        Spacing="8">
                                <RatingControl IsReadOnly="True"
                                               IsTabStop="False"
                                               PlaceholderValue="{TemplateBinding Rating}" />
                                <TextBlock VerticalAlignment="Center"
                                           FontSize="18"
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           Text="{TemplateBinding RoundedRating}" />
                            </StackPanel>
                            <!--  Playtime  -->
                            <TextBlock Margin="0,27,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Text="{TemplateBinding PlayTime}" />
                            <!--  Age Ratings  -->
                            <StackPanel Margin="0,38,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="12">
                                <dev:ImageEx Height="30"
                                             IsCacheEnabled="True"
                                             Source="{TemplateBinding AgeRatingUrl}"
                                             Stretch="Uniform" />
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Text="{TemplateBinding AgeRatingTitle}" />
                                    <TextBlock FontSize="10"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="{TemplateBinding AgeRatingDescription}" />
                                </StackPanel>
                            </StackPanel>
                            <!--  Metadata Scrollviewer  -->
                            <ScrollViewer x:Name="Metadata_ScrollViewer"
                                          Grid.Row="1"
                                          Margin="0,2,0,0"
                                          HorizontalScrollMode="Disabled"
                                          VerticalScrollBarVisibility="Hidden">
                                <StackPanel>
                                    <StackPanel Spacing="8">
                                        <!--  Genres  -->
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Auto"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Genres}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="8" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="8,2"
                                                                Background="{ThemeResource SettingsCardBackground}"
                                                                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                                                                BorderThickness="1"
                                                                CornerRadius="8">
                                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                                                       Text="{Binding}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                        <!--  Features  -->
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Auto"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Features}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="8" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="8,2"
                                                                Background="{ThemeResource SettingsCardBackground}"
                                                                BorderBrush="{ThemeResource ControlStrokeColorDefault}"
                                                                BorderThickness="1"
                                                                CornerRadius="8">
                                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                                                       Text="{Binding}" />
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <!--  Description  -->
                                    <TextBlock Margin="0,16,0,24"
                                               Text="{TemplateBinding Description}"
                                               TextWrapping="Wrap" />
                                    <!--  Screenshots  -->
                                    <StackPanel x:Name="Screenshots_StackPanel"
                                                Margin="0,0,0,16"
                                                Visibility="Collapsed">
                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Text="Screenshots:" />
                                        <!--<views:GameGallery x:Name="Screenshots_Gallery">
                                            <views:GameGallery.HeaderContent>
                                                <ItemsControl ItemsSource="{TemplateBinding Screenshots}">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" Spacing="18" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <dev:ImageEx
                                                                Height="160"
                                                                Margin="0,8,0,8"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Stretch"
                                                                AutomationProperties.AccessibilityView="Raw"
                                                                CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                IsCacheEnabled="True"
                                                                Source="{Binding}"
                                                                Stretch="Uniform" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </views:GameGallery.HeaderContent>
                                        </views:GameGallery>-->
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Disabled"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Screenshots}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="18" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <dev:ImageEx Height="160"
                                                                     Margin="0,8,0,8"
                                                                     HorizontalAlignment="Stretch"
                                                                     VerticalAlignment="Stretch"
                                                                     AutomationProperties.AccessibilityView="Raw"
                                                                     CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                     IsCacheEnabled="True"
                                                                     Source="{Binding}"
                                                                     Stretch="Uniform" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <!--  Videos  -->
                                    <StackPanel x:Name="Videos_StackPanel"
                                                Margin="0,0,0,16"
                                                Visibility="Collapsed">
                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Text="Videos:" />
                                        <ScrollViewer HorizontalAlignment="Left"
                                                      HorizontalScrollBarVisibility="Hidden"
                                                      HorizontalScrollMode="Auto"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      VerticalScrollMode="Disabled"
                                                      ZoomMode="Disabled">
                                            <ItemsControl ItemsSource="{TemplateBinding Videos}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal"
                                                                    Spacing="16" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <MediaPlayerElement Height="250"
                                                                            Margin="0,8,0,8"
                                                                            AreTransportControlsEnabled="True"
                                                                            AutoPlay="False"
                                                                            CornerRadius="{ThemeResource ControlCornerRadius}"
                                                                            Source="{Binding}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <!--  Install Location  -->
                                    <StackPanel Margin="0,0,0,16"
                                                Orientation="Vertical">
                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Text="Install Location:" />
                                        <TextBlock Margin="0,2,0,12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Text="Open the install location." />
                                        <dev:TextBox HorizontalAlignment="Left"
                                                     IsReadOnly="True"
                                                     IsTabStop="False"
                                                     Text="{TemplateBinding InstallLocation}">
                                            <dev:TextBox.Content>
                                                <Button x:Name="OpenInstallLocation"
                                                        Content="&#xE838;"
                                                        IsTabStop="True" />
                                            </dev:TextBox.Content>
                                        </dev:TextBox>
                                    </StackPanel>
                                    <!--  Presentation Mode  -->
                                    <StackPanel x:Name="PresentationMode"
                                                Margin="0,0,0,16"
                                                Visibility="Collapsed">
                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Text="Presentation Mode:" />
                                        <TextBlock Margin="0,2,0,12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Text="Use Hardware: Independent Flip if you have issues when tabbing out." />
                                        <ComboBox x:Name="PresentationMode_ComboBox">
                                            <ComboBoxItem Content="Hardware: Independent Flip" />
                                            <ComboBoxItem Content="Hardware: Legacy Flip" />
                                        </ComboBox>
                                    </StackPanel>
                                    <Border Height="32"
                                            Background="Transparent" />
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
