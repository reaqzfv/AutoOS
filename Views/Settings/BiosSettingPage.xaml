<Page x:Class="AutoOS.Views.Settings.BiosSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS.Views.Settings.BIOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"
                    Margin="36,24,36,0">
            <!--  Title  -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                       Text="BIOS Settings" />
            <Grid Margin="0,48,0,24"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!--  Search  -->
                <dev:TextBox Grid.Column="0"
                             Margin="0,0,12,0"
                             PlaceholderText="Search..."
                             TextChanged="SearchBox_TextChanged">
                    <dev:TextBox.Content>
                        <Button Content="&#xE71E;" />
                    </dev:TextBox.Content>
                </dev:TextBox>
                <!--  Import  -->
                <Button Grid.Column="1"
                        Click="Import_Click">
                    <StackPanel VerticalAlignment="Center"
                                Orientation="Horizontal">
                        <FontIcon Margin="0,0,8,0"
                                  FontSize="14"
                                  Glyph="&#xE8B5;" />
                        <TextBlock Text="Import to NVRAM" />
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
        <dev:SwitchPresenter x:Name="SwitchPresenter"
                             Grid.Row="1"
                             Value="True">
            <dev:Case Value="True">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical"
                            Spacing="8">
                    <ProgressRing IsActive="True" />
                    <TextBlock HorizontalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Text="Exporting NVRAM..." />
                </StackPanel>
            </dev:Case>
            <dev:Case Value="False">
                <!--  ScrollViewer  -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="36,0,36,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!--  Recommended Changes  -->
                        <Expander Grid.Row="0"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Stretch"
                                  IsExpanded="True">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0"
                                                Orientation="Horizontal"
                                                Spacing="12">
                                        <!--  Title  -->
                                        <TextBlock VerticalAlignment="Center"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}"
                                                   Text="Recommended Changes" />
                                        <!--  Apply  -->
                                        <Button Click="MergeChanges_Click">
                                            <StackPanel VerticalAlignment="Center"
                                                        Orientation="Horizontal">
                                                <FontIcon Margin="0,0,8,0"
                                                          FontSize="14"
                                                          Glyph="&#xE930;" />
                                                <TextBlock Text="Merge Changes" />
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                    <!--  Counter  -->
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="{x:Bind recommendedSettings.Count, Mode=OneWay}" />
                                </Grid>
                            </Expander.Header>
                            <!--  ListView  -->
                            <Grid MaxHeight="550">
                                <ListView x:Name="RecommendedSettingsListView"
                                          HorizontalContentAlignment="Stretch"
                                          ItemsSource="{x:Bind recommendedSettings}"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          SelectionMode="None"
                                          VirtualizingStackPanel.VirtualizationMode="Standard">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="local:BiosSettingModel">
                                            <StackPanel Margin="0,4,0,16">
                                                <!--  Setup Question  -->
                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                           Text="{x:Bind SetupQuestion}" />
                                                <!--  Help String  -->
                                                <TextBlock Margin="0,2,0,0"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Text="{x:Bind HelpString}"
                                                           TextWrapping="Wrap" />
                                                <!--  BIOS Default  -->
                                                <TextBlock Margin="0,2,0,0"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Text="{x:Bind DisplayBiosDefault}"
                                                           TextWrapping="Wrap"
                                                           Visibility="{x:Bind HasDefault, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <!--  Recommended Changes  -->
                                                <StackPanel Margin="0,8,0,0"
                                                            Orientation="Horizontal"
                                                            Spacing="8">
                                                    <!--  Current Value  -->
                                                    <Border Padding="4,2"
                                                            Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                                            CornerRadius="4">
                                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                                                   Text="{x:Bind DisplayCurrent}" />
                                                    </Border>
                                                    <!--  Arrow  -->
                                                    <FontIcon VerticalAlignment="Center"
                                                              FontSize="10"
                                                              Glyph="&#xF0AF;" />
                                                    <!--  Recommended Value  -->
                                                    <Border Padding="4,2"
                                                            Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                                                            CornerRadius="4">
                                                        <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                                   Text="{x:Bind DisplayRecommended}" />
                                                    </Border>
                                                </StackPanel>
                                                <!--  Options  -->
                                                <ItemsControl Margin="0,8,0,0"
                                                              ItemsSource="{x:Bind Options}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="local:Option">
                                                            <RadioButton Margin="12,0,0,0"
                                                                         Content="{x:Bind Label}"
                                                                         IsChecked="{x:Bind IsSelected, Mode=TwoWay}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!--  Value  -->
                                                <TextBox Margin="12,4,0,0"
                                                         HorizontalAlignment="Left"
                                                         Text="{x:Bind Value, Mode=TwoWay}"
                                                         Visibility="{x:Bind HasValueField, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Expander>
                        <!--  All Settings  -->
                        <Expander Grid.Row="1"
                                  Margin="0,12,0,0"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Stretch"
                                  IsExpanded="False">
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <!--  Title  -->
                                    <TextBlock Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"
                                               Text="All Settings" />
                                    <!--  Counter  -->
                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Text="{x:Bind biosSettings.Count, Mode=OneWay}" />
                                </Grid>
                            </Expander.Header>
                            <!--  ListView  -->
                            <Grid MaxHeight="550">
                                <ListView x:Name="SettingsListView"
                                          HorizontalContentAlignment="Stretch"
                                          ItemsSource="{x:Bind biosSettings}"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                          SelectionMode="None"
                                          VirtualizingStackPanel.VirtualizationMode="Standard">
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="local:BiosSettingModel">
                                            <StackPanel Margin="0,4,0,16">
                                                <!--  Setup Question  -->
                                                <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                                                           Text="{x:Bind SetupQuestion}" />
                                                <!--  Help String  -->
                                                <TextBlock Margin="0,2,0,0"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Text="{x:Bind HelpString}"
                                                           TextWrapping="Wrap" />
                                                <!--  BIOS Default  -->
                                                <TextBlock Margin="0,2,0,0"
                                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                           Style="{StaticResource CaptionTextBlockStyle}"
                                                           Text="{x:Bind DisplayBiosDefault}"
                                                           TextWrapping="Wrap"
                                                           Visibility="{x:Bind HasDefault, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                                <!--  Options  -->
                                                <ItemsControl Margin="0,8,0,0"
                                                              ItemsSource="{x:Bind Options}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate x:DataType="local:Option">
                                                            <RadioButton Margin="12,0,0,0"
                                                                         Content="{x:Bind Label}"
                                                                         IsChecked="{x:Bind IsSelected, Mode=TwoWay}" />
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!--  Value  -->
                                                <TextBox Margin="12,4,0,0"
                                                         HorizontalAlignment="Left"
                                                         Text="{x:Bind Value, Mode=TwoWay}"
                                                         Visibility="{x:Bind HasValueField, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Grid>
                        </Expander>
                    </Grid>
                </ScrollViewer>
            </dev:Case>
        </dev:SwitchPresenter>
    </Grid>
    <Page.Resources>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>
</Page>
