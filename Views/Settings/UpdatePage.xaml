<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.UpdatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="36,24,0,0"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="Windows Update" />
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel Margin="{ThemeResource ContentPageMargin}"
                        Padding="{ThemeResource ContentPagePadding}"
                        dev:PanelAttach.ChildrenTransitions="Default"
                        Spacing="8">
                <dev:SettingsGroup Description="Enabling Windows Updates is currently not recommended for 24H2 and later because they feature questionable changes that can hurt gaming performance."
                                   Header="Windows Updates"
                                   HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Update2.png}">
                    <dev:SettingsGroup.Content>
                        <StackPanel Spacing="12">
                            <HyperlinkButton Margin="0,-24,0,0"
                                             Click="ReadMoreButton_Click"
                                             Content="Read more"
                                             Style="{StaticResource TextBlockButtonStyle}" />
                            <ToggleSwitch x:Name="WindowsUpdate"
                                          Toggled="Update_Toggled" />
                        </StackPanel>
                    </dev:SettingsGroup.Content>
                    <dev:SettingsGroup.Items>
                        <dev:SettingsCard Header="Target Version">
                            <ComboBox x:Name="TargetVersion"
                                      SelectionChanged="TargetVersion_SelectionChanged" />
                        </dev:SettingsCard>
                    </dev:SettingsGroup.Items>
                </dev:SettingsGroup>
                <StackPanel x:Name="WindowsUpdateInfo" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
