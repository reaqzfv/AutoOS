<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="AutoOS.Views.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="using:CommunityToolkit.WinUI.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:AutoOS"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:AutoOS.Views.Settings"
      mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Margin="36,24,0,0"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="Settings" />
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      VerticalScrollMode="Auto">
            <StackPanel Margin="{ThemeResource ContentPageMargin}"
                        Padding="{ThemeResource ContentPagePadding}"
                        dev:PanelAttach.ChildrenTransitions="Default">
                <dev:SimpleSettingsGroup Margin="0,-48,0,0"
                                         Header="Appearance &amp; behavior">
                    <dev:SettingsCard Description="Select the theme that suits your mood and preference. You can choose from dark, light, or system themes."
                                      Header="App theme"
                                      HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Theme.png}">
                        <ComboBox dev:ThemeServiceAttach.ThemeService="{x:Bind local:App.Current.ThemeService}">
                            <ComboBoxItem Content="Light"
                                          Tag="Light" />
                            <ComboBoxItem Content="Dark"
                                          Tag="Dark" />
                            <ComboBoxItem Content="Default"
                                          Tag="Default" />
                        </ComboBox>
                    </dev:SettingsCard>
                    <dev:SettingsCard Description="Change the appearance of the backdrop material behind your app. You can choose from mica, acrylic, or transparent options."
                                      Header="Material"
                                      HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Backdrop.png}">
                        <ComboBox dev:ThemeServiceAttach.ThemeService="{x:Bind local:App.Current.ThemeService}">
                            <ComboBoxItem Content="Mica"
                                          Tag="Mica" />
                            <ComboBoxItem Content="Mica Alt"
                                          Tag="MicaAlt" />
                            <ComboBoxItem Content="Acrylic"
                                          Tag="Acrylic" />
                        </ComboBox>
                    </dev:SettingsCard>
                    <dev:SettingsCard ActionIcon="{dev:BitmapIcon Source=Assets/Fluent/External.png}"
                                      Description="Sync your app’s color with your Windows accent color. You can open the Windows accent color setting by clicking this card."
                                      Header="Accent color"
                                      HeaderIcon="{dev:BitmapIcon Source=Assets/Fluent/Color.png}"
                                      IsClickEnabled="True"
                                      LaunchUri="ms-settings:colors" />
                </dev:SimpleSettingsGroup>
                <dev:SimpleSettingsGroup Header="Games">
                    <dev:Card Title="Switch Emulator"
                              Padding="24,24,24,12">
                        <dev:Card.Content>
                            <StackPanel>
                                <GridView x:Name="SwitchEmulator"
                                          SelectionChanged="SwitchEmulator_Changed"
                                          SelectionMode="Single">
                                    <GridView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Height="75"
                                                  Margin="24">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <StackPanel VerticalAlignment="Center">
                                                    <Image Height="36"
                                                           Margin="0,0,0,8"
                                                           Source="{Binding ImageSource}" />
                                                    <TextBlock HorizontalAlignment="Center"
                                                               FontSize="14"
                                                               Text="{Binding Text}"
                                                               TextAlignment="Center"
                                                               TextTrimming="CharacterEllipsis"
                                                               TextWrapping="Wrap" />
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <controls:StaggeredPanel ColumnSpacing="12"
                                                                     DesiredColumnWidth="155"
                                                                     RowSpacing="12" />
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                </GridView>
                                <dev:SettingsCard Header="Executable Location"
                                                  HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                            Glyph=&#xE8A5;}">
                                    <dev:TextBox x:Name="ExecutableLocationValue"
                                                 MinWidth="300"
                                                 PlaceholderText="Executable Location..."
                                                 TextChanged="ExecutableLocation_TextChanged">
                                        <dev:TextBox.Content>
                                            <Button Click="ExecutableLocation_Click"
                                                    Content="&#xE838;" />
                                        </dev:TextBox.Content>
                                    </dev:TextBox>
                                </dev:SettingsCard>
                                <dev:SettingsCard Header="Data Location"
                                                  HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                            Glyph=&#xE8B7;}">
                                    <dev:TextBox x:Name="DataLocationValue"
                                                 MinWidth="300"
                                                 PlaceholderText="Data Location..."
                                                 TextChanged="DataLocation_TextChanged">
                                        <dev:TextBox.Content>
                                            <Button Click="DataLocation_Click"
                                                    Content="&#xE838;" />
                                        </dev:TextBox.Content>
                                    </dev:TextBox>
                                </dev:SettingsCard>
                            </StackPanel>
                        </dev:Card.Content>
                    </dev:Card>

                </dev:SimpleSettingsGroup>
                <dev:SimpleSettingsGroup Header="Startup">
                    <dev:SettingsCard Description="Enable to completely hide the AutoOS Startup window."
                                      Header="Launch minimized"
                                      HeaderIcon="{dev:FontIcon FontFamily={StaticResource SymbolThemeFontFamily},
                                                                Glyph=&#xE73F;}">
                        <ToggleSwitch x:Name="LaunchMinimized"
                                      Toggled="LaunchMinimized_Toggled" />
                    </dev:SettingsCard>
                </dev:SimpleSettingsGroup>
                <dev:SimpleSettingsGroup Header="About">
                    <dev:SettingsExpander Margin="0,0,0,36"
                                          Description="tinodin"
                                          Header="AutoOS"
                                          HeaderIcon="{dev:BitmapIcon Source=Assets/AppIcon.png}"
                                          IsExpanded="False">
                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   IsTextSelectionEnabled="True"
                                   Text="{x:Bind dev:ProcessInfoHelper.Version}" />
                        <dev:SettingsExpander.Items>
                            <dev:SettingsCard x:Name="CloneRepo"
                                              Click="CloneRepo_Click"
                                              Header="To clone this repository"
                                              IsClickEnabled="True">
                                <TextBlock x:Name="GitCloneTextBlock"
                                           FontFamily="Consolas"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           IsTextSelectionEnabled="True"
                                           Text="git clone https://github.com/tinodin/AutoOS" />
                                <dev:SettingsCard.ActionIcon>
                                    <FontIcon Glyph="&#xE8C8;" />
                                </dev:SettingsCard.ActionIcon>
                            </dev:SettingsCard>
                            <dev:SettingsCard HorizontalContentAlignment="Left"
                                              ContentAlignment="Left">
                                <StackPanel Orientation="Vertical"
                                            Spacing="5">
                                    <TextBlock Text="Related Links" />
                                    <HyperlinkButton Content="Source Code"
                                                     NavigateUri="https://github.com/tinodin/AutoOS" />
                                    <HyperlinkButton Content="Release Notes"
                                                     NavigateUri="https://github.com/tinodin/AutoOS/releases" />
                                </StackPanel>
                            </dev:SettingsCard>
                        </dev:SettingsExpander.Items>
                    </dev:SettingsExpander>
                </dev:SimpleSettingsGroup>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>